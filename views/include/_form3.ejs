<form action="/upload2" method="POST" enctype="multipart/form-data" id="select_pic" style="text-align: center;">
     
    <h3>Choose image for the new item</h3>
    
    <div class="new_user">
        <div class="form-group">
        <div class="field">
            <label for="file">File</label>
            <input type="file" name="img" id="" accept="image/png, image/gif, image/jpeg" required>
        </div>
    </div> 

    <div class="form-group" > 
        <div class="field">
            <input type="submit" class="btn text-dark update" style="width: 30%;">
        </div>
    </div>
</div>
</form> 



 