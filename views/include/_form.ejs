    <div class="new_user">
        <div class="form-group">
            <label for="clientPhone" class="text-light">Phone Number</label>
            <input type="number" name="clientPhone" value="" placeholder="Phone Number" autofocus required> 
        </div> 

        <div class="form-group">
            <label for="clientName" class="text-light">Client Name</label>
            <input type="text" name="clientName" value="" placeholder="Client Name" required>
            <input type="hidden" id="itmid" name="itm_id" value="">
            <input type="hidden" id="odate" name="odate" value=""> 
        </div> 

       <div class="form-group">
           <label for="clientAddress" class="text-light">Address</label>
           <input type="text" name="clientAddress" value="" placeholder="Address" required> 
       </div> 

       <div class="form-group"> 
        <label for="item" class="text-light">Item</label>  
        <select name="item" id="sltid" required> 
            <option disabled selected value> -- select an option -- </option>
         <% for(var i = 0; i < items.length;i++){ %> 
                <option><%= items[i].itemName %></option>  
            <% } %>
       </select> 
    </div>


    <div class="form-group"> 
        <label for="item" class="text-light">zzzz</label>  
 

       <select name="item" id="people">

        <% for(var i = 0; i < items.length;i++){ %> 
            <option data-style="background-image: url(<%= items[i].imgurl %>&"><%= items[i].itemName %></option>  
        <% } %> 
    </select>
    </div> 
    <!-- data-style="background-image: url(&apos;http://www.gravatar.com/avatar/b3e04a46e85ad3e165d66f5d927eb609?d=monsterid&amp;r=g&amp;s=16&apos;);" -->
    <div class="form-group">  
        <select name="itemidx" id="itemidx" hidden> 
            <option disabled selected value> -- select an option -- </option>
         <% for(var i = 0; i < items.length;i++){ %> 
                <option><%= items[i].price %></option>  
            <% } %>
       </select> 
    </div>

    <div class="form-group">  
        <select name="itemqty" id="itemqty" hidden> 
            <option disabled selected value> -- select an option -- </option>
         <% for(var i = 0; i < items.length;i++){ %> 
                <option><%= items[i].instock %></option>  
            <% } %>
       </select> 
    </div>

    <div class="form-group">  
        <select name="itemid" id="itemid" hidden> 
            <option disabled selected value> -- select an option -- </option>
         <% for(var i = 0; i < items.length;i++){ %> 
                <option><%= items[i]._id %></option>  
            <% } %>
       </select> 
    </div>
     
       
       <div class="form-group">
           <label for="qty" class="text-light">QTY</label> 
           <input type="number" id="qty" name="qty" value="" min="1" placeholder="Number of Items" required>
       </div>

       <div class="form-group">
        <label for="price" class="text-light">Unit Amount($)</label> 
        <input type="text" name="price" id="price" value="" readonly>
    </div>

       <div class="form-group">
           <label for="total" class="text-light">Total Amount($)</label> 
           <input type="text" id="total" name="total" value="" readonly>
       </div>

       <div class="form-group"> 
        <input type="text" id="instock" name="instock" value="" hidden>   
    </div>

       <div class="form-group">
           <button type="submit" class="btn text-dark update">save</button>
       </div>
       
    </div>
</form>



